# Environment variables for tangy-mango
# Copy this file to .env and update the values

# Database URL for sqlx (optional - used for compile-time query validation)
# For local development
# DATABASE_URL=postgres://username:password@localhost:5432/tangy_mango
# For Docker environment
# DATABASE_URL=postgres://postgres:password@postgres:5432/tangy_mango

# Rust log level
RUST_LOG=info

# === Docker Environment Configuration ===

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=tangy_mango
DB_MAX_CONNECTIONS=10

# For MySQL (alternative database)
# DB_HOST=mysql
# DB_PORT=3306
# DB_USERNAME=tangy_user
# DB_PASSWORD=password
# DB_DATABASE=tangy_mango

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# PostgreSQL Container Configuration
POSTGRES_DB=tangy_mango
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MySQL Container Configuration (for MySQL profile)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=tangy_mango
MYSQL_USER=tangy_user
MYSQL_PASSWORD=password

# Admin Tools Configuration
PGADMIN_DEFAULT_EMAIL=admin@tangy-mango.com
PGADMIN_DEFAULT_PASSWORD=admin